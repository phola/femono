{
  "name": "femono",
  "version": "0.0.1",
  "description": "Front end monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/sharing-components.git"
  },
  "author": "geoff W",
  "scripts": {
    "start": "SET NODE_ENV=development & start-storybook -p 9001 -c .storybook",
    "test": "jest --coverage --verbose || true",
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --parallel -- babel src -d dist --ignore spec.js,story.js",
    "build-storybook": "build-storybook",
    "publish": "lerna publish --skip-npm",
    "prepublish": "npm run build",
    "precommit": "npm test",
    "postinstall": "npm run bootstrap",
    "cosmos": "cosmos",
    "cosmos:export": "cosmos-export"
  },
  "devDependencies": {
    "@storybook/react": "3.2.16",
    "babel-cli": "6.26.0",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "glob-loader": "^0.3.0",
    "jest": "^21.2.1",
    "lerna": "^2.5.1",
    "react": "^16.1.1",
    "react-cosmos": "^3.0.0",
    "react-dom": "^16.1.1",
    "react-test-renderer": "^16.1.1",
    "styled-components": "^2.2.3"
  },
  "jest": {
    "resetMocks": true,
    "resetModules": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/**/*.js",
      "!packages/**/dist/**",
      "!**/node_modules/**",
      "!**/*.story.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>node_modules/",
      "<rootDir>coverage/"
    ],
    "testMatch": [
      "**/?(*.)(spec).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/setupTests.js"
    ]
  }
}
